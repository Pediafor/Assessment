generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  body      String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId, createdAt])
}
