generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  body      String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId, createdAt])
}
