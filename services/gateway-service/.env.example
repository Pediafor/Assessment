# Gateway Service Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# PASETO Configuration (must match UserService)
PASETO_PUBLIC_KEY=your-ed25519-public-key-here
GATEWAY_SECRET=gateway-secret-key-change-in-production

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Microservice URLs
USER_SERVICE_URL=http://localhost:4000
ASSESSMENT_SERVICE_URL=http://localhost:4001
SUBMISSION_SERVICE_URL=http://localhost:4002
GRADING_SERVICE_URL=http://localhost:4003

# Security Configuration
MAX_REQUEST_SIZE=10mb
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined