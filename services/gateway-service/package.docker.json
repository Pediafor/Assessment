{
  "name": "gateway-service",
  "version": "1.0.0",
  "description": "API Gateway for Pediafor Assessment Platform - Routes requests, validates PASETO tokens, and manages microservice communication",
  "main": "dist/server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start:realtime": "node dist/realtime-server.js",
    "start:all": "npm run start & npm run start:realtime",
    "dev": "ts-node-dev --respawn src/server.ts",
    "dev:realtime": "ts-node-dev --respawn src/realtime-server.ts",
    "realtime": "ts-node-dev --respawn src/realtime-server.ts",
    "realtime:build": "tsc && node dist/realtime-server.js",
    "realtime:prod": "npm run build && node dist/realtime-server.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pediafor/Assessment.git#main"
  },
  "author": "venkatesh-reddi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Pediafor/Assessment/issues"
  },
  "homepage": "https://github.com/Pediafor/Assessment/tree/main#readme",
  "dependencies": {
    "amqplib": "^0.10.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "http-proxy-middleware": "^3.0.5",
    "morgan": "^1.10.1",
    "paseto": "^3.1.4",
    "selfsigned": "^3.0.1",
    "uuid": "^9.0.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.9.1",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "jest": "^30.0.0",
    "ts-jest": "^30.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}