# Pediafor Assessment Platform - Environment Configuration Template
# Copy this file to .env and update the values

# PASETO Keys for Authentication (REQUIRED)
# Generate using: node -e "const paseto = require('paseto'); console.log(paseto.V4.generateKey('local'))"
PASETO_PRIVATE_KEY=your-paseto-private-key-here
PASETO_PUBLIC_KEY=your-paseto-public-key-here

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=pediafor

# RabbitMQ Configuration
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=pediafor2024
RABBITMQ_DEFAULT_VHOST=pediafor

# Redis Configuration
REDIS_PASSWORD=redis123

# Application Environment
NODE_ENV=production

# Real-time Service Configuration
REALTIME_PORT=8080
REALTIME_ENABLE_WEBSOCKET=true
REALTIME_ENABLE_WEBTRANSPORT=true

# Service URLs (Docker internal)
USER_SERVICE_URL=http://user-service:4000
ASSESSMENT_SERVICE_URL=http://assessment-service:4001
SUBMISSION_SERVICE_URL=http://submission-service:4002
GRADING_SERVICE_URL=http://grading-service:4003

# External URLs (for testing)
GATEWAY_URL=http://localhost:3000
REALTIME_URL=ws://localhost:8080/realtime